# ========================================
# CRITICAL ENVIRONMENT VARIABLES
# ========================================
# These variables are REQUIRED for the application to start

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Google API Credentials (Base64 encoded JSON)
GOOGLE_CREDENTIALS_BASE64=your-base64-encoded-credentials-here

# Google Sheets IDs
GOOGLE_SHEETS_REPORT_ID=your-bangkit-sheet-id-here
GOOGLE_SHEETS_MAJU_REPORT_ID=your-maju-sheet-id-here
GOOGLE_SHEETS_MAPPING_ID=your-mapping-sheet-id-here
GOOGLE_SHEET_ID_UM=1mO4Vn24QxbCO87iTKCVJn7E98ew5fxb7mTn_Yh6L2KI

# ========================================
# GOOGLE DRIVE SECURITY CONFIGURATION
# ========================================
# CRITICAL: Controls who can access uploaded files
# Options:
#   - 'domain': Restrict to your organization domain (RECOMMENDED)
#   - 'anyone': Public access (USE WITH CAUTION)

GOOGLE_DRIVE_PERMISSION_TYPE=domain
GOOGLE_DRIVE_PERMISSION_DOMAIN=yourdomain.com

# ========================================
# APPS SCRIPT URLS
# ========================================
NEXT_PUBLIC_APPS_SCRIPT_URL=your-bangkit-apps-script-url
NEXT_PUBLIC_APPS_SCRIPT_LAPORAN_MAJU_URL=your-maju-apps-script-url

# ========================================
# NEXT AUTH CONFIGURATION
# ========================================
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ========================================
# OPTIONAL CONFIGURATION
# ========================================
# Sheet ID for health checks (defaults to GOOGLE_SHEETS_REPORT_ID)
# SHEET_ID=your-sheet-id-here

# Node environment
NODE_ENV=development
